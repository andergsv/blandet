FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    inlet
    {
        type            parabolicVelocity;
        n               (1 0 0);
        y               (0 1 0);
        maxValue        1;
        value           uniform (0 0 0); // Dummy for pa
    }

    outlet
    {
        type            zeroGradient;

    }
    
    walls
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }

    frontAndBack
    {
        type            empty;
    }
}

